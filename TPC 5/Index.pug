extends layout.pug
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de Alunos
            .w3-container
                form.w3-container(action='/Processaform' method='POST')
                    label.w3-teal
                        b Tarefa
                    input.w3-input.w3-borders.w3-ligt-grey(type='text' name ='Tarefa')
                    label.w3-teal
                        b DataLimite
                    input.w3-input.w3-borders.w3-ligt-grey(type='text' name ='DataLimite')
                    label.w3-teal
                    input.w3-btn.w3-blue-grey(type='submit' value ='Enviar')
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Alunos
            .w3-container
                table.w3-table-all
                    tr
                        th Tarefa
                        th Data Limite
                    each al in lista
                        tr
                            td=al.Tarefa
                            td=al.DataLimite
            footer.w3-container.w3-teal
                By Realizado por João Sá